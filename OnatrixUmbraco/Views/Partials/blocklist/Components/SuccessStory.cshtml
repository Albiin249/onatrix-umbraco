@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.SuccessStory)Model.Content;
}


<section class="relative">
    <div class="absolute inset-0">
        @if (content.SuccessBackgroundImage != null)
        {
            <img src="@content.SuccessBackgroundImage.Url()" class="w-full object-cover" />
        }
    </div>

    <div class="flex items-center justify-center mx-auto sm:px-4 relative z-10 max-w-7xl">
        <div class="flex flex-col items-center pt-16">
            <h3>@content.SuccessTitle</h3>

            <div class="flex flex-col md:flex-row items-center justify-between mt-4 gap-[5rem] bg-primary w-full">
                <div>@Html.Raw(content.SuccessBoxOne)</div>
                <div>@Html.Raw(content.SuccessBoxTwo)</div>
                <div>@Html.Raw(content.SuccessBoxThree)</div>
            </div>


            <div class="flex items-center justify-center">
                @if (content.SuccessImage != null)
                {
                    <img src="@content.SuccessImage.Url()" class="pt-[8rem] w-9/10" />
                }
            </div>
        </div>

        
    </div>
   
    
</section>