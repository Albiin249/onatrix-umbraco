@using OnatrixUmbraco.ViewModels
@model ServiceDetailFormViewModel

@using (Html.BeginUmbracoForm("HandleServiceDetailForm", "Form", FormMethod.Post, new { novalidate = "novalidate", id = "serviceDetailForm" }))
{
    <div class="flex flex-col gap-6 max-w-7xl mx-auto px-4 py-16">

        <p class="text-primary font-bold text-[1.5625rem]">Have a question?</p>

        <div class="flex justify-between gap-10">
            <div class="w-full">
                <input asp-for="Name" type="text"
                       placeholder="Name"
                       class="italic text-placeholder-text w-full p-3 border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="w-full">
                <input asp-for="Email" type="email"
                       placeholder="Email"
                       class="italic text-placeholder-text w-full p-3 border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>
       

        <div>
            <textarea asp-for="Question"
                      placeholder="Question"
                      rows="5"
                      class="italic text-placeholder-text w-full p-3 border border-gray-300 focus:ring-2 focus:ring-primary focus:outline-none"></textarea>
            <span asp-validation-for="Question"></span>
        </div>

        <button type="submit" class="form-btn-service">Submit</button>
    </div>
}
